@model WTF_Site.ViewModels.ComicFormViewModel
@{
    ViewBag.Title = "New Comic";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>ComicForm</h2>

@using (Html.BeginForm("Save", "Comics"))
{
    @Html.ValidationSummary()
    <div class="form-group">
        @Html.LabelFor(m => m.Comic.Title)
        @Html.TextBoxFor(m => m.Comic.Title, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Comic.Title)
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.Comic.Price)
        @Html.TextBoxFor(m => m.Comic.Price, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Comic.Price)
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Comic.ReleaseDate)
        @Html.TextBoxFor(m => m.Comic.ReleaseDate, "{0:d MMM yyyy}", new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Comic.ReleaseDate)
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Comic.GenreId)
        @Html.DropDownListFor(m => m.Comic.GenreId, new SelectList(Model.Genres, "Id", "Name"), "Select Membership Type", new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Comic.GenreId)
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Comic.Summary)
        @Html.TextBoxFor(m => m.Comic.Summary, new { @class = "form-control" })
    </div>

    @Html.HiddenFor(m => m.Comic.Id)

    <button type="submit" class="btn btn-primary">Save</button>
}