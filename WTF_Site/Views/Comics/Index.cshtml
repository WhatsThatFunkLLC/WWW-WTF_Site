@model WTF_Site.ViewModels.ComicsViewModel
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@Html.Partial("_NavBar")
<h2>Available Comics</h2>

<table id="customers" class="table table-striped table-bordered table-hover">
    <tr bgcolor="#0F0000">
        <th>Title</th>
        <th>Issue #</th>
        <th>Price</th>
        <th>Summary</th>
    </tr>
    @foreach (WTF_Site.Models.Comic comic in Model.Comics)
    {
        <tr onclick="location.href = '@(Url.Action("Details", "Comics", new { id = @comic.Id }))'">
            <td>@comic.Title</td>
            <td>@comic.Id</td>
            <td>$@comic.Price</td>
            <td>@comic.Summary</td>
        </tr>
    }
</table>

